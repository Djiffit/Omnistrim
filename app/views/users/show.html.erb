<body style="overflow-y: scroll !important">
<br><br>
<h3 style="padding-left: 5%;"><%= @user.name %></h3>
<h3>Favorites:</h3>

<div clas="container" style=" width:calc(100vw - 350px); flex-wrap: wrap">
  <div class="row" style="width:calc(100vw - 390px)">
    <% @favorites.each  do |s| %>
        <div class="col-md-1 col-sm-1 col-lg-1" style="height: 180px;">
          <a href=<%= '/'+s.stream.provider+'/'+s.stream.name%> class="thumbnail" style="background-color: transparent; border-color: transparent;">
            <p><%= s.stream.name %></p>
            <img src="<%= s.stream.icon %>"  style="width: 90px;">
          </a>
        </div>
    <% end %>
  </div>
</div>
<div class="container" style="width: 377px; float: right; position: absolute; right: -15px; top: 5px;" >
  <div class="panel panel-default" style="width: 377px; padding-top: 45px; float: right">
    <div class="panel-heading">
      <span class="glyphicon glyphicon-camera"></span> Recent messages, <a href='/logs/<%= @user.name %>'>see full message history</a>
    </div>
    <div id="panelchat" class="panel-body" style="height: auto">
      <ul class="chat">
        <div id="messages">
          <% @messages.each do |m| %>
              <%= render 'messages/message', message: m %>
          <% end %>
        </div>
      </ul>
    </div>
  </div>
</div>
</body>