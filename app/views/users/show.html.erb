<body style="overflow-y: scroll !important;">
<br><br>
<h3><%= @user.name %></h3>
<% @favorites.each do |f| %>
     <a href="/<%= f.stream.provider + '/'+ f.stream.name %>"><img src="<%= f.stream.icon %>"style="height: 300px; width: 300px;" ></img></a>  
<% end %>
<div class="container" style="float: right; position: absolute; right: -15px; top: 5px;" >
  <div class="panel panel-default" style="width: 377px; padding-top: 45px; float: right">
    <div class="panel-heading">
      <span class="glyphicon glyphicon-camera"></span> Recent messages, <a href='/logs/<%= @user.name %>'>see full message history</a>
    </div>
    <div id="panelchat" class="panel-body" style="height: calc(100vh - 50px)">
      <ul class="chat">
        <div id="messages">
          <% @messages.each do |m| %>
              <%= render 'messages/message', message: m %>
          <% end %>
        </div>
      </ul>
    </div>
  </div>
</div>
</body>