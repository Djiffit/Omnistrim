<div>
  <h2 align="center" style="padding-top: 150px">Fill in the following details</h2>
</div>

<div align="center" style="padding-top: 50px">
  <div class="row">
    <%= form_tag 'signup', method: :post do %>
        <div class="form-group input-group has-feedback" align="center" style="width: 400px;">
        <span class="input-group-addon">
           <i class="glyphicon glyphicon-user"></i>
        </span>
          <input class="form-control" id="username" name="username" type="text" placeholder="Enter username here" style="width: 400px;"/>
        </div>
        <br>
        <div class="form-group input-group has-feedback" style="width: 400px">
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-lock"></i>
        </span>
          <input class="form-control" id="password" name="password" placeholder="Enter password here" type="password" style="width: 400px;"/>
        </div>
        <br>
        <%= submit_tag "Create", class: "btn btn-submit" %>
    <% end %>
  </div>
</div>