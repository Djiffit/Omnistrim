
<br><br>

<h3>Chat logs of <%= @user.name if @user%></h3>

<div class="container">
  <div class="panel panel-default" style="width: 100%">
    <div class="panel-heading">
      <span class="glyphicon glyphicon-comment"></span> Chatlog
    </div>
    <div class="panel-body">
      <ul class="chat">
        <div id="messages">
          <% @messages.each do |mes| %>
              <div class="message">
                <li><%= mes.created_at %> <b><%= mes.name %></b>: <%= mes.content %>
                </li>
              </div>
          <% end %>
        </div>
      </ul>
    </div>
  </div>
</div>