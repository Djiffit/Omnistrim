<div class="container">
  <div class="panel panel-default" style="width: 278px; padding-top: 48px">
    <div class="panel-heading">
      <span class="glyphicon glyphicon-comment"></span> Chatroom
    </div>
    <div class="panel-body">
      <ul class="chat">
        <div id="messages">
          <%= render @messages %>
        </div>
      </ul>
    </div>
    <div class="panel-footer" id="footer-of-panel">
      <div class="input-group">
        <input data-behavior ="room-speaker" id="btn-input" type="text" class="form-control input-sm" placeholder="Type your message here..." />
        <input hidden data-behavior="name-speaker" id="nimi" value="<%= session[:name] %>" type="text">
        <span class="input-group-btn">
                            <button class="btn btn-default btn-sm" id="btn-chat">
                              Send</button>
                        </span>
      </div>
    </div>
  </div>
</div>
