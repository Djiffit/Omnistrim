<body style="overflow-y: auto">
<div>
  <div id="leftside" style="width:calc(100% - 290px); float:left; position: absolute; padding-top: -5px">
    <br><br><br>
    <ul class="horizontal-slide" style="overflow-x: scroll">
      <% @streams.map do |s| %>
          <% if (s['channel']['game'] != 'Overwatch' && s['channel']['game'] != 'StarCraft II' && s['channel']['game'] != 'Heroes of the Storm' && s['channel']['game'] != 'Dota 2' && s['channel']['game'] != 'Counter-Strike: Global Offensive'  && s['channel']['game'] != 'League of Legends') %>
              <li class="span2">
                <small style="padding-left: 5px; color:#777777"><%= s['channel']['display_name'] %> - <%= s['viewers'] %> viewers</small>
                <a href="<%= 'twitch/'+s['channel']['display_name'] %>" class="thumbnail" style="width: 320px; height: 180px;  border-color: transparent;
                    background-color: transparent;">
                  <img src="<%= s['preview']['large'] %>" alt="" />
                </a>
              </li>
          <% end %>
      <% end %>
    </ul>
    <ul class="horizontal-slide" style="">
      <% @streams.map do |s| %>
          <% if s['channel']['game'] == 'Dota 2' %>
              <li class="span2">
                <small style="padding-left: 5px; color:#777777"><%= s['channel']['display_name'] %> - <%= s['viewers'] %> viewers</small>
                <a href="<%= 'twitch/'+s['channel']['display_name'] %>" class="thumbnail" style="width: 320px; height: 180px;  border-color: transparent;
                    background-color: transparent;">
                  <img src="<%= s['preview']['large'] %>" alt="" />
                </a>
              </li>
          <% end %>
      <% end %>
    </ul>
    <ul class="horizontal-slide" style="">
      <% @streams.map do |s| %>
          <% if s['channel']['game'] == 'Counter-Strike: Global Offensive' %>
              <li class="span2">
                <small style="padding-left: 5px; color:#777777"><%= s['channel']['display_name'] %> - <%= s['viewers'] %> viewers</small>
                <a href="<%= 'twitch/'+s['channel']['display_name'] %>" class="thumbnail" style="width: 320px; height: 180px;  border-color: transparent;
                    background-color: transparent;">
                  <img src="<%= s['preview']['large'] %>" alt="" />
                </a>
              </li>
              <% end %><% end %>
    </ul>
    <ul class="horizontal-slide" style="">
      <% @streams.map do |s| %>
          <% if s['channel']['game'] == 'Overwatch' || s['channel']['game'] == 'StarCraft II' || s['channel']['game'] == 'Heroes of the Storm' %>
              <li class="span2">
                <small style="padding-left: 5px; color:#777777"><%= s['channel']['display_name'] %> - <%= s['viewers'] %> viewers</small>
                <a href="<%= 'twitch/'+s['channel']['display_name'] %>" class="thumbnail" style="width: 320px; height: 180px;  border-color: transparent;
                    background-color: transparent;">
                  <img src="<%= s['preview']['large'] %>" alt="" />
                </a>
              </li>
          <% end %>
      <% end %>
    </ul>
  </div>
  <div id="chatside" style="width: 290px; float:right; padding-top: 5px">

    <% if current_user.nil? || current_user.twitch.nil? || current_user.youtubetoken %>

        <% if current_user && current_user.youtubetoken %>
            <div class="list-group " style="padding-top: 51px">
              <% @youtube.map do |y| %>
                  <a href="/channel/view/<%= y.id %>" class="list-group-item list-group-item-info" style="font-size: small; height: 30px; padding-top: 5px; color:#1c1c1c"><img src="<%= y.thumbnail_url %>" style="height: 22px"><small style=""><%= '  ' + y.title%></small></a>
              <% end %>
            </div>
        <%end %>
        <% if 1 == 1 %>
            <%= render 'streams/omnichat', messages: @messages %>
        <% end %>
    <% else %>
        <div style="padding-left: 20px; padding-top: 65px; width: 275px;">
          <% @follows.map do |s| %>
              <div class="row">
                <p><a href="<%= '/twitch/'+s['channel']['display_name']%>"><img src="<%= s['channel']['logo'] %>" style="width: 30px"></a>  <%= link_to s['channel']['display_name'], '/twitch/'+s['channel']['display_name']%>   |    <small style="font-size: smaller"><%= s['viewers'] %> viewers </small><br>
                  <label><small style="font-size: smaller">Playing <%= s['game'] %> </small></label> </p>
              </div>
          <% end %>
        </div>
    <% end %>

  </div>
</div>
</body>